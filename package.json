{
  "name": "purrl",
  "author": "Mauro Erta <mauro@vlkstudio.com>",
  "description": "Expose your localhost to a custom local domain",
  "license": "MIT",
  "type": "module",
  "version": "0.0.1",
  "files": [
    "dist"
  ],
  "bin": {
    "https": "dist/cli.js",
    "__https_bash_complete": "dist/bash-complete.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "prebuild": "tsc -p src/tsconfig.json",
    "build": "tsup",
    "prepublishOnly": "npm run build",
    "postinstall": "https install"
  },
  "tsup": {
    "entry": [
      "src/bin/cli.ts",
      "src/bin/bash-complete.ts"
    ],
    "format": [
      "esm"
    ],
    "tsconfig": "src/tsconfig.json",
    "clean": true,
    "splitting": true,
    "minify": true
  },
  "dependencies": {
    "@stricli/auto-complete": "^1.0.0",
    "@stricli/core": "^1.0.0",
    "chalk": "^5.3.0",
    "consola": "^3.2.3",
    "http-proxy": "^1.18.1"
  },
  "devDependencies": {
    "@types/http-proxy": "^1.17.15",
    "@types/node": "20.x",
    "tsup": "^6.7.0",
    "tsx": "^4.19.1",
    "typescript": "5.6.x"
  }
}
